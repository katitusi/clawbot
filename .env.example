# =============================================================================
# OpenClaw/Clawbot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Gateway Configuration
# -----------------------------------------------------------------------------

# Docker image name
OPENCLAW_IMAGE=openclaw:local

# Gateway port (default: 18789)
OPENCLAW_GATEWAY_PORT=18789

# Gateway bind mode: lan | loopback | 0.0.0.0
# - lan: accessible from local network (recommended for development)
# - loopback: localhost only (most secure)
# - 0.0.0.0: all interfaces (use with caution, add firewall!)
OPENCLAW_GATEWAY_BIND=lan

# Host binding for port mapping
# Use 127.0.0.1 for local-only access (recommended)
# Use 0.0.0.0 for external access (requires firewall/auth!)
OPENCLAW_GATEWAY_HOST=127.0.0.1

# Gateway authentication token
# Generate with: openssl rand -hex 32
# REQUIRED for security - never use the example value!
OPENCLAW_GATEWAY_TOKEN=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# -----------------------------------------------------------------------------
# Directory Configuration
# -----------------------------------------------------------------------------

# OpenClaw config directory (agents, sessions, config)
OPENCLAW_CONFIG_DIR=~/.openclaw

# Workspace directory for agent file operations
OPENCLAW_WORKSPACE_DIR=~/.openclaw/workspace

# -----------------------------------------------------------------------------
# Model API Keys (add the ones you use)
# -----------------------------------------------------------------------------

# OpenAI (GPT-4, Codex, etc.)
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# Azure OpenAI (optional)
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_ENDPOINT=

# -----------------------------------------------------------------------------
# Docker Build Options
# -----------------------------------------------------------------------------

# Extra apt packages to install in the gateway image
# Space-separated list of package names
OPENCLAW_DOCKER_APT_PACKAGES=

# Extra host mounts (comma-separated)
# Format: host_path:container_path:mode
# Example: /home/user/code:/home/node/code:rw,/data:/data:ro
OPENCLAW_EXTRA_MOUNTS=

# Named volume for entire /home/node (optional)
# OPENCLAW_HOME_VOLUME=openclaw_home

# -----------------------------------------------------------------------------
# Tool-Specific Configuration
# -----------------------------------------------------------------------------

# Gmail CLI (gog) keyring password
GOG_KEYRING_PASSWORD=

# 1Password Connect (for secrets management)
# OP_CONNECT_HOST=
# OP_CONNECT_TOKEN=

# -----------------------------------------------------------------------------
# Sandbox Configuration
# -----------------------------------------------------------------------------

# Default sandbox image
OPENCLAW_SANDBOX_IMAGE=openclaw-sandbox:bookworm-slim

# Browser sandbox image (for Playwright/Puppeteer skills)
OPENCLAW_BROWSER_SANDBOX_IMAGE=openclaw-sandbox-browser:bookworm-slim

# -----------------------------------------------------------------------------
# Logging & Debugging
# -----------------------------------------------------------------------------

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable debug mode (verbose output)
# DEBUG=openclaw:*
